<% if (post.link){ %>
  <h2>
    <a href="<%- url_for(post.link) %>" target="_blank"><%= post.title %></a>
  </h2>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h2>
      <a href="<%- url_for(post.path) %>">
        <%= post.title %>    
      </a>
    </h2>
  <% } else { %>
    <h2 class="<%= class_name %>">
      <%= post.title %>
    </h2>
  <% } %>
<% } %>