<% if (post.link){ %>
  <h1>
    <a href="<%- url_for(post.link) %>" target="_blank"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1>
      <a href="<%- url_for(post.path) %>">
        <%= post.title %>    
      </a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>